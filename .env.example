# Token Nexus Platform - Environment Configuration
# Copy this file to .env.local for local development

# =============================================================================
# PARSE SERVER CONFIGURATION
# =============================================================================
NEXT_PUBLIC_PARSE_APP_ID=gemcms_dev
NEXT_PUBLIC_PARSE_JAVASCRIPT_KEY=gemcms_js_key_dev
NEXT_PUBLIC_PARSE_SERVER_URL=http://localhost:1337/parse
PARSE_MASTER_KEY=gemcms_master_key_dev

# =============================================================================
# PLATFORM STATE MANAGEMENT (Production)
# =============================================================================
# Platform status: PRISTINE, CORE_ARTIFACTS_IMPORTING, CORE_ARTIFACTS_IMPORTED, 
#                  PARENT_ORG_CREATING, PARENT_ORG_CREATED, OPERATIONAL, ERROR
PLATFORM_STATUS=PRISTINE
PLATFORM_PARENT_ORG_ID=
PLATFORM_CORE_CONTRACTS_NETWORK=basesep

# =============================================================================
# ORGANIZATION CONFIGURATION
# =============================================================================
DEFAULT_PARENT_ORG_PLAN_TYPE=enterprise

# =============================================================================
# DEVELOPMENT TOOLS SECURITY
# =============================================================================
# Set to 'true' to enable dev tools in production (NOT RECOMMENDED)
ENABLE_DEV_TOOLS_IN_PRODUCTION=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Environment: development, staging, production
NODE_ENV=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret for session management
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# DFNS Configuration
DFNS_API_URL=
DFNS_APP_ID=
DFNS_AUTH_TOKEN=

# Persona KYC Configuration
PERSONA_API_KEY=
PERSONA_TEMPLATE_ID=

# Alchemy Configuration
ALCHEMY_API_KEY=
ALCHEMY_WEBHOOK_SECRET=

# =============================================================================
# DATABASE CONFIGURATION (if using external database for state)
# =============================================================================
DATABASE_URL=
DATABASE_SSL=true

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
# Log level: error, warn, info, debug, trace
LOG_LEVEL=info

# Enable remote logging
ENABLE_REMOTE_LOGGING=false
REMOTE_LOG_ENDPOINT=

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=10

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_ASSISTANT=true
ENABLE_PAGE_BUILDER=true
ENABLE_MARKETPLACE=true
ENABLE_SYSTEM_ADMIN=true