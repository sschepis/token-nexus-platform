# Parse Server Configuration
PARSE_APP_ID=gemcms_dev
PARSE_MASTER_KEY=gemcms_master_key_dev
PARSE_SERVER_URL=http://localhost:1337/parse

# Database Configuration
DATABASE_TYPE=postgresql
DATABASE_URI=postgresql://postgres:password@localhost:5432/token_nexus_platform

ENCRYPTION_KEY=your_secure_encryption_key_here

# PostgreSQL Database Settings (if using PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=token_nexus_platform
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Default Organization Settings
DEFAULT_TENANT_ID=default

# Dashboard Configuration
PARSE_DASHBOARD_ENABLED=true
PARSE_DASHBOARD_MOUNT_PATH=/dashboard
PARSE_DASHBOARD_APP_NAME=Token Nexus Platform
PARSE_DASHBOARD_USER_1_USER=admin
PARSE_DASHBOARD_USER_1_PASS=admin
PARSE_DASHBOARD_COOKIE_SECRET=your_secure_cookie_secret_here

# Security Settings
RATE_LIMIT_MAX=100

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# File Storage
FILES_DIR=./uploads

# Environment
NODE_ENV=development
PORT=1337

